= form_for @flight do |f|
  - if @flight.errors.any?
    #error_explanation
      %h2= "#{pluralize(@flight.errors.count, "error")} prohibited this flight from being saved:"
      %ul
        - @flight.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :date
    = f.text_field :date
  .field
    = f.label :flight
    = f.text_field :fl
  .field
    = f.label :departure_airport
    - #= f.number_field :departure_airport
    = f.text_field :departure_airport
  .field
    = f.label :arrival_airport
    -#= f.number_field :arrival_airport
    = f.text_field :arrival_airport
  .field
    = f.label :econom
    = f.text_field :econom
  .actions
    = f.submit 'Save'
